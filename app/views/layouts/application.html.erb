<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/5.19.1/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'Hearth Master', root_path, class: 'navbar-brand' %>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'See All Tutorials', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b class="footer-column-header">Teachers</b>
            <br />
            <br>
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br>
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b class="footer-column-header">About</b>
            <br>
            <br>
            <%= link_to 'Team', '#' %>
            <br>
            <%= link_to 'Careers', '#' %>
            <br>
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b class="footer-column-header">Contact</b>
            <br>
            <br>
            rj@test.com
            <br>
            123 Main St.
            <br>
            Dallas, TX 72805
          </div>
          <div class="col-12 col-sm-3 social">
            <b class="footer-column-header">Social</b>
            <br>
            <br>
            <%= link_to 'https://github.com/roderickjoseph' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          </div>
        </div>
      </div>
    </div>

    <script src="https://vjs.zencdn.net/5.19.1/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
